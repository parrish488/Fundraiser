@model Fundraiser.Models.HomeData

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row text-center">
    <br />
    <div class="progress" style="height:100px;">
        <div class="progress-bar progress-bar-success" 
             role="progressbar" 
             aria-valuenow="@Model.TotalRaised" 
             aria-valuemin="0" 
             aria-valuemax="3000" 
             style="width: @((Model.TotalRaised/3000)*100)%; font-size: 50px; line-height:100px; text-align:center;">
            <span>@((int)((Model.TotalRaised / 3000) * 100))%</span>
        </div>
    </div>
    <div class="col-md-4 col-md-offset-4">
        <hr />
        <h3>Current Total Raised: $@Model.TotalRaised</h3>
        <hr />
        <h3>Goal: $3000</h3>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            function refresh() {
                console.log("Refreshing page.");
                location.reload();
            }

            setTimeout(refresh, 30000);
        });
    </script>
}
